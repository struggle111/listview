<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_rly"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/aa1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/common_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/aa1"
        android:background="@drawable/common_bg" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <Button
                android:id="@+id/add_for_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_btn_gold"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="14sp" >
            </Button>

            <EditText
                android:id="@+id/add_for_username"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/add_for_btn"
                android:background="@drawable/selector_edit_gold"
                android:gravity="center_vertical"
                android:hint="输入要屏蔽的姓名或手机号"
                android:minLines="1"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:text="" >
            </EditText>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>