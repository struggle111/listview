<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_rly"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/halftrans_black" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/dialog_bg"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/t1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/show_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="对方相册已上锁，您是否要申请查看相册？"
                android:textColor="@color/gray_81"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/app_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/t1"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_btn_gold"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="申请查看"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/app_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/t1"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_btn_gold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text=" 取 消 "
            android:textColor="@color/white"
            android:textSize="14sp" >
        </Button>
    </RelativeLayout>

</RelativeLayout>