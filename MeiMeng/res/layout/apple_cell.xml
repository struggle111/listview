<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_rly"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/msg_header"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head" >
    </ImageView>

    <Button
        android:id="@+id/msg_app_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn_gold"
        android:gravity="center"
        android:minLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="同意"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/lay_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/msg_app_btn"
        android:layout_toRightOf="@id/msg_header"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/lay_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/msg_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minLines="1"
                android:text="用户名"
                android:textColor="@color/gray_38"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-8-12"
                android:textColor="@color/gray_81"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/msg_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_top"
            android:background="@null"
            android:clickable="false"
            android:maxLines="4"
            android:text="23"
            android:textColor="@color/gray_81"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>