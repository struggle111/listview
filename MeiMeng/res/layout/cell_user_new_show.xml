<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_rly"
    android:layout_width="fill_parent"
    android:layout_height="66dip"
    android:background="@color/white" >

    <TextView
        android:id="@+id/cell_left"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:gravity="left|center_vertical"
        android:text="用户id"
        android:textColor="@color/gray_23"
        android:textSize="14sp"
        android:visibility="visible" >
    </TextView>
    <!-- android:layout_marginLeft="130dip" -->

    <TextView
        android:id="@+id/cell_right"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:background="@null"
        android:clickable="false"
        android:gravity="center_horizontal|center_vertical"
        android:maxLines="3"
        android:minHeight="40dip"
        android:text="保密"
        android:textColor="@color/gray_75"
        android:textSize="14sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/cell_right_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cell_left"
        android:layout_marginLeft="20dip"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:background="@null"
        android:clickable="false"
        android:gravity="right|center_vertical"
        android:minHeight="40dip"
        android:text=""
       
        android:textColor="@color/gray_75"
        android:textSize="14sp" />

</RelativeLayout>