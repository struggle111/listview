<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blank" >

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/topNav"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/blank" >

            <ImageButton
                android:id="@+id/left_img_btn"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dip"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:src="@drawable/top_btn_icon"
                android:text=""
                android:textColor="#ffffff"
                android:visibility="gone" >
            </ImageButton>


            <Button
                android:id="@+id/home_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:text=""
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_arrow_left"
                android:textSize="20sp"
                android:textColor="@color/gold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/home_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:src="@drawable/btn_focus"
                android:text="登录"
                android:textColor="@color/gold"
                android:textSize="20sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/center_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/gold"
                android:textSize="24sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>

</TabHost>